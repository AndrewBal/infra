kind: Deployment
apiVersion: extensions/v1beta1
metadata:
  name: mdn-samples
spec:
  replicas: 1
  template:
    metadata:
      labels:
        app: mdn-samples
    spec:
      containers:
        - name: mdn-samples-nginx
          image: "{{ SAMPLES_NGINX_IMAGE }}:{{ SAMPLES_IMAGE_TAG }}"
          imagePullPolicy: Always
          ports:
            - containerPort: {{ SAMPLES_NGINX_CONTAINER_PORT }}
        - name: mdn-samples-webrtc
          image: "{{ SAMPLES_WEBRTC_IMAGE }}:{{ SAMPLES_IMAGE_TAG }}"
          imagePullPolicy: Always
          ports:
            - containerPort: {{ SAMPLES_WEBRTC_CONTAINER_PORT }}
        - name: mdn-samples-websocket
          image: "{{ SAMPLES_WEBSOCKET_IMAGE }}:{{ SAMPLES_IMAGE_TAG }}"
          imagePullPolicy: Always
          ports:
            - containerPort: {{ SAMPLES_WEBSOCKET_CONTAINER_PORT }}
